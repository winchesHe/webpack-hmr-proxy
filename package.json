{
  "name": "@winches/hot-proxy",
  "type": "module",
  "version": "0.0.1",
  "description": "dynamic change webpack-dev-server proxy without rebuild",
  "author": "winches",
  "license": "MIT",
  "keywords": [
    "webpack-dev-server",
    "proxy",
    "dynamic",
    "webpack",
    "quickly"
  ],
  "sideEffects": false,
  "scripts": {
    "prepublishOnly": "npm run build",
    "prepare": "simple-git-hooks",
    "dev": "tsup --watch",
    "build": "tsup --minify",
    "lint": "eslint --cache --ext ts,tsx,vue .",
    "release": "npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.3",
    "@types/express": "^4.17.17",
    "@types/node": "^18.7.18",
    "eslint": "^8.23.1",
    "esno": "^0.16.3",
    "lint-staged": "^13.1.2",
    "rimraf": "^4.1.2",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "chokidar": "^3.5.3",
    "http-proxy-middleware": "^2.0.6"
  }
}
